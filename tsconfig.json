{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost",
      "esnext.asynciterable"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "jsx": "preserve",
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "allowJs": true,
    "resolveJsonModule":true,
    "baseUrl": ".",
    "paths": {
      "express-asyncify": ["./src/typings/express-asyncify"],
      "~~/*": ["./src/services/*"],
      "~/*": ["./src/*"]
    },
    "outDir": "dist"
  }
}
